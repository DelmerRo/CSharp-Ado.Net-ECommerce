
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Summary</a></li>
    <li class="breadcrumb-item active">Users</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i>List of Users
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success">Create New</button>
            </div>
        </div>
        <hr />

        <table id="User_Table" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Correo</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script>

        var dataTable;

        jQuery.ajax({
            url: '@Url.Action("ListUsers", "User")',
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                   console.log(data)
            }
        })

        dataTable = $("#User_Table").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListUsers", "User")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "Nombres" },
                { "data": "Apellidos" },
                { "data": "Correo" },
                {
                    "data": "Activo", "render": function (value) {
                        var res = '<span class="badge bg-danger">No</span>';
                        if (value) {
                            res = '<span class="badge bg-success">Si</span>';
                        }
                        return res;
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                     "width": "90px"
                }
            ]
        });

    </script>

}


